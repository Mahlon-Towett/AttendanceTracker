<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_50">

    <!-- Toolbar with extended height to cover status bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_modern"
        android:elevation="12dp"
        android:minHeight="?attr/actionBarSize"
        android:paddingTop="15dp"
        android:fitsSystemWindows="true"
        app:title="Attendance"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/arr_ios"
        app:navigationIconTint="@color/white" />

    <!-- Enhanced Header with Gradient -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background_modern"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:elevation="8dp">

        <!-- Header content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clock in/out from your location"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="14dp"
        android:scrollbarStyle="outsideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <!-- SECURITY: Time Validation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_time_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/blue_50"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Security"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to refresh validation"
                                android:textSize="12sp"
                                android:textColor="@color/blue_600"
                                android:alpha="0.8" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”„"
                            android:textSize="18sp"
                            android:alpha="0.6" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_time_validation_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Validating device time..."
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_700" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!-- Add this Device Validation Card to your activity_attendance.xml -->
            <!-- Place it after the Time Validation Card -->

            <!-- SECURITY: Device Validation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_device_validation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/green_50"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“±"
                            android:textSize="24sp"
                            android:layout_marginEnd="12dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Device Security"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to refresh device validation"
                                android:textSize="12sp"
                                android:textColor="@color/green_600"
                                android:alpha="0.8" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”„"
                            android:textSize="18sp"
                            android:alpha="0.6" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_device_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Validating device session..."
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/green_700" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Current Time Card - Enhanced -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ•"
                        android:textSize="48sp"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Time"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="42sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_600"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Location Status Card - Enhanced -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/blue_50"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="4dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/location_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Location Status"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tap to refresh location"
                                android:textSize="13sp"
                                android:textColor="@color/blue_600"
                                android:alpha="0.8" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”„"
                            android:textSize="20sp"
                            android:alpha="0.7" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_location_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checking location..."
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/blue_700"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_distance_from_office"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- from office"
                        android:textSize="15sp"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Today's Attendance Info Card - Enhanced -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_attendance_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="6dp"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <View
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/attendance_icon_background"
                            android:layout_marginEnd="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today's Attendance"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tv_today_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not clocked in"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange_600" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Times Grid - Enhanced -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Clock In Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/attendance_status_card"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸŸ¢"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clock In"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="6dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_clock_in_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--:--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/green_600" />

                        </LinearLayout>

                        <!-- Clock Out Time -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/attendance_status_card"
                            android:layout_marginHorizontal="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ”´"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Clock Out"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="6dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_clock_out_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--:--"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/orange_600" />

                        </LinearLayout>

                        <!-- Hours Worked -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp"
                            android:background="@drawable/attendance_status_card"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â±ï¸"
                                android:textSize="24sp"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hours"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="6dp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tv_hours_worked"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0h 0m"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/blue_600" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Section - Enhanced -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Clock In Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clock_in"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:text="ðŸŸ¢ Clock In to Work"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/green_600"
                    app:elevation="6dp"
                    android:layout_marginBottom="16dp"
                    android:enabled="false"
                    android:fontFamily="sans-serif-medium" />

                <!-- Clock Out Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clock_out"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:text="ðŸ”´ Clock Out from Work"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@color/orange_600"
                    app:elevation="6dp"
                    android:visibility="gone"
                    android:enabled="false"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="@color/blue_600"
                    android:layout_marginVertical="16dp" />

                <!-- Enhanced Security Info Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:layout_margin="4dp"
                    app:cardBackgroundColor="@color/blue_50"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ðŸ›¡ï¸"
                                android:textSize="24sp"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Security Requirements"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/blue_800" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="â€¢ You must be within 200m of the office to clock in/out\nâ€¢ Location services must be enabled\nâ€¢ Automatic date &amp; time must be enabled\nâ€¢ Device time must match server time\nâ€¢ GPS accuracy affects detection\nâ€¢ Tap cards above to refresh validation"
                            android:textSize="14sp"
                            android:textColor="@color/blue_700"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>